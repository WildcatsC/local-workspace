.container {
    box-sizing: border-box;
    height: 100vh;
    padding: 8px;
    background: #f8f8f8;
    color: rgba(169, 23, 152, 0.85);
}

.centered {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.vertical.centered>view {
    display: flex;
    height: 60vh;
    flex-direction: row;
    align-items: center;
}