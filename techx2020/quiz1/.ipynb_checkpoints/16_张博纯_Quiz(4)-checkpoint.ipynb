    "def reverse_combine(tuple):\n",
    "    if len(tuple[0])==len(tuple[1]):\n",
    "        result=''\n",
    "        num=len(tuple[1])\n",
    "        for i in range(num):\n",
    "            result+=tuple[0][num-i-1]\n",
    "            result+=tuple[1][num-i-1]\n",
    "        print(result)\n",
    "    else:\n",
    "        print('format not correct')"
   ]
